<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="login-form" action="/login" method="POST" novalidate>
            <div class="form-control">
                <label for="email">E-Mail</label>
                <input class="<%= validError.find(e => e.param === 'email') ? 'validate' : '' %>" type="email" name="email" id="email" value="<%= userInput.email %>">
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input class="<%= validError.find(e => e.param === 'password') ? 'validate' : '' %>" type="password" name="password" id="password" value="<%= userInput.password %>">
            </div>
            <div class="form-control">
               <a href="/reset"><span>forget password?</span> </a>
            </div>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn" type="submit">Login</button>
            
            <% if(errorMessage) {%>
            <div class="container">
                <span class="errorMessage"><%= errorMessage %></span>
            </div>
            <% }  %>
        </form>
    </main>
<%- include('../includes/end.ejs') %>